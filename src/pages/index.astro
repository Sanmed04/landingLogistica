---
import Header from "../components/Header.astro";
import VideoIndex from "../components/VideoIndex.astro";
import WhatsappButton from "../components/WhatsappButton.astro";
import WhyUs from "../components/WhyUs.astro";
import Servicios from "../components/Servicios.astro";
import Footer from "../components/Footer.astro";
import ContactoForm from "../components/ContactoForm.astro";
import Conocenos from "../components/Conocenos.astro";
import "@fontsource/poppins";
import "@fontsource/poppins/700.css";
// import json
---

<html class="scroll-smooth" lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Logistica - Landing Page</title>
  </head>
  <body class="font-poppins">
    <div id="main"></div>

    <Header />

    <main class="h-fit">
      <VideoIndex />
    </main>

    <section class="h-screen text-center pt-40" id="servicios">
      <WhyUs />
    </section>

    <section class="h-96 bg-slate-100 flex justify-center">
      <Servicios />
    </section>

    <section class="flex justify-center pt-28 pb-56" id="contacto">
      <ContactoForm />
    </section>

    <section class="h-screen flex flex-col justify-center" id="conocenos">
      <Conocenos />
    </section>

    <Footer />
  </body>

  <WhatsappButton />
</html>

<style>
  body::-webkit-scrollbar {
    display: none;
  }

  body {
    -ms-overflow-style: none; /* IE and Edge */
  }
</style>
