---
import JSON from "../../public/JSON.json";
import IconsFooter from "./IconsFooter.astro";
import IconsFooterContacto from "./IconsFooterContacto.astro";
import { Image } from "astro:assets";
import logotipo from "../../public/images/camionPNGIcon2.png";
---

<footer class="bg-slate-900 w-screen h-60 flex flex-col pt-2">
  <div class="w-screen flex justify-center mt-2">
    <div class="flex justify-evenly w-screen items-center container">
      <div class="w-1/3 flex justify-start">
        <a href="#main" class="bg-white rounded">
          <Image src={logotipo} alt="logo" class="h-40 w-auto" />
        </a>
      </div>
      <div class="w-1/3"></div>
      <div class="w-1/3 flex justify-end">
        <div class="gap-3 flex flex-col w-60 ">
          {
            JSON.iconsFooterContacto.map((icon, index) => (
              <IconsFooterContacto
                key={index}
                path={icon.path}
                text={icon.text}
                viewbox={icon.viewbox}
              />
            ))
          }
        </div>
      </div>
    </div>
  </div>

  <div class="w-screen flex justify-center mt-auto text-white">
    <div class="flex justify-evenly w-screen items-center mb-4 container">
      <p class="w-1/3 text-start">Â© Logistica SRL. 2024</p>
      <p class="w-1/3">
      </p>
      <div class="flex justify-end w-1/3">
        <div class="flex justify-between gap-4 w-60">
          {
            JSON.iconsFooter.map((icon, index) => (
              <IconsFooter
                key={index}
                path={icon.path}
                viewbox={icon.viewbox}
                href={icon.href}
              />
            ))
          }
        </div>
      </div>
    </div>
  </div>
</footer>
