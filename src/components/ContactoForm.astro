<form
  method="POST"
  class="bg-slate-900 h-3/4 w-1/3 rounded-[28px] p-8 flex flex-col"
>
  <div class="flex items-center">
    <h2 class="mb-8 text-white text-[46px] font-bold">Cont√°ctanos</h2>
    <div class="h-100 w-full ps-4">
      <hr class="" style="border: 1px solid rgb(255, 255, 255);" />
    </div>
  </div>
  <div class="mb-3">
    <label for="name"  class="text-white">Nombre</label>
    <input
      type="text"
      name="name"
      placeholder="Ingrese su nombre"
      class="rounded-lg w-full py-3 ps-2"
      required
      id="name"
      autocomplete="name"
    />
  </div>
  <div class="">
    <label for="email"  class="text-white">Email</label>
    <input
      type="email"
      name="email"
      placeholder="Ingrese su email"
      class="rounded-lg w-full py-3 ps-2"
      required
      id="email"
      autocomplete="email"
    />
  </div>
  <div class="my-3">
    <label for="telephone" class="text-white">Telefono</label>
    <input
      type="tel"
      name="telephone"
      pattern="[0-9]{2}-[0-9]{4}-[0-9]{4}"
      placeholder="Ingrese su telefono"
      class="rounded-lg w-full py-3 ps-2"
      required
      maxlength="12"
      id="telephone"
      autocomplete="tel"
    />
  </div>
  <div class="">
    <label for="message" class="text-white">Mensaje</label>
    <textarea
      name="message"
      class="rounded-lg w-full ps-2 pt-2 text-wrap h-full h-48 max-h-48 min-h-48"
      required
      style="resize: none;"
      id="message"
      placeholder="Ingrese su mensaje"
    ></textarea>
  </div>

  <div
    class="bg-blue-600 rounded-lg ms-auto mt-auto py-4 px-8 w-fit text-white"
  >
    <button type="submit">Send</button>
  </div>
</form>
